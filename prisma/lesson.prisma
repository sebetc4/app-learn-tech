enum LessonType {
  TEXT
  VIDEO
  TEXT_AND_VIDEO
}

model Lesson {
  id       String @id @default(uuid())
  position Int
  name     String

  type      LessonType
  htmlPath  String?    @map("html_path")
  htmlSize  Int?       @map("html_size")
  videoPath String?    @map("video_path")
  videoDuration Int?      @map("video_duration")

  chapterId String  @map("chapter_id")
  chapter   Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  codeSnippets CodeSnippet[]
  resources    Resource[]

  @@map("lessons")
}

{
    "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
    "include": [
        "electron.vite.config.*",
        "src/database/**/*",
        "src/main/**/*",
        "src/preload/**/*",
        "src/types/**/*",
        "src/constants/**/*"
    ],
    "compilerOptions": {
        "composite": true,
        "types": ["electron-vite/node"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@main/*": ["src/main/*"],
            "@preload/*": ["src/preload/*"]
        }
    }
}
